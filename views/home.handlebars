<div class="d-flex justify-between align-center mb-4">
  <h1 class="mb-0">Dashboard</h1>
  <div>
    <a href="/payments/add" class="btn btn-primary btn-sm">
      <i class="fas fa-plus"></i> Record Payment
    </a>
  </div>
</div>

<div class="stats">
  <div class="stat-box fade-in">
    <i class="fas fa-users mb-2" style="font-size: 2rem; color: var(--primary);"></i>
    <h2>Tenants</h2>
    <p>{{stats.tenantCount}}</p>
    <a href="/tenants" class="mt-2 btn btn-sm">View All</a>
  </div>
  
  <div class="stat-box fade-in" style="animation-delay: 0.1s;">
    <i class="fas fa-building mb-2" style="font-size: 2rem; color: var(--primary);"></i>
    <h2>Properties</h2>
    <p>{{stats.propertyCount}}</p>
    <a href="/properties" class="mt-2 btn btn-sm">View All</a>
  </div>
  
  <div class="stat-box fade-in" style="animation-delay: 0.2s;">
    <i class="fas fa-money-bill-wave mb-2" style="font-size: 2rem; color: var(--primary);"></i>
    <h2>Total Payments</h2>
    <p>${{stats.totalPayments}}</p>
    <a href="/payments" class="mt-2 btn btn-sm">View All</a>
  </div>
</div>

<div class="grid grid-2 mb-3">
  <div class="card">
    <div class="d-flex justify-between align-center mb-3">
      <h3 class="mb-0">Recent Payments</h3>
      <a href="/payments/report" class="btn btn-sm">
        <i class="fas fa-file-alt"></i> Full Report
      </a>
    </div>
    {{#if recentPayments}}
      <table>
        <thead>
          <tr>
            <th>Tenant</th>
            <th>Amount</th>
            <th>Date</th>
            <th>Status</th>
          </tr>
        </thead>
        <tbody>
          {{#each recentPayments}}
            <tr>
              <td>{{this.tenant_name}}</td>
              <td>${{this.amount}}</td>
              <td>{{this.payment_date}}</td>
              <td>
                <span class="badge {{#if (eq this.status 'paid')}}badge-success{{else}}badge-warning{{/if}}">
                  {{this.status}}
                </span>
              </td>
            </tr>
          {{/each}}
        </tbody>
      </table>
    {{else}}
      <p class="text-center mt-3 mb-3">No recent payments to display.</p>
    {{/if}}
  </div>
  
  <div class="card">
    <div class="d-flex justify-between align-center mb-3">
      <h3 class="mb-0">Quick Actions</h3>
    </div>
    <div class="grid grid-2 gap-2">
      <a href="/tenants/add" class="btn">
        <i class="fas fa-user-plus"></i> Add Tenant
      </a>
      <a href="/properties/add" class="btn">
        <i class="fas fa-plus-circle"></i> Add Property
      </a>
      <a href="/payments/add" class="btn">
        <i class="fas fa-money-bill"></i> Record Payment
      </a>
      <a href="/payments/report" class="btn">
        <i class="fas fa-chart-line"></i> View Reports
      </a>
    </div>
  </div>
</div>